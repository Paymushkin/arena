{
  "name": "arena",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "The Arena - Vue 3 + Nuxt 3 + Tailwind CSS project",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "deploy": "npm run generate && node scripts/deploy.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview:fresh": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && rm -rf .output .nuxt && npm run build && npm run preview"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "gsap": "^3.14.2",
    "nuxt": "^3.13.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.3.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/sitemap": "^7.4.9",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@types/node": "^20.14.0",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "sass": "^1.77.0",
    "typescript": "^5.5.0",
    "vue-tsc": "^3.1.1"
  }
}
